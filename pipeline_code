
# Sample Percent B anthracis checking


kraken2 --db pluspf --paired --threads 48 --output - --report Clean_Reads.fq.gz

bracken -d pluspf -i Clean_Reads.fq.gz -l S -o Bracken_Report_Species





# Isolate Genomes

/home/jpodowski/src/bbmap/bbduk.sh  in="${i}" in2="${i//_R1_001.fastq.gz}_R2_001.fastq.gz" out="${i//_R1_001.fastq.gz}_interleaved_decontam.fastq.gz"  ref=/home/jpodowski/src/bbmap/resources/adapters.fa ktrim=r k=23 mink=11 hdist=1 tpe tbo
/home/jpodowski/src/bbmap/removehuman.sh path=/home/jpodowski/databases/humangenomes/ in="${i//_R1_001.fastq.gz}_interleaved_decontam.fastq.gz" outu="${i//_R1_001.fastq.gz}_interleaved_decontam_nohuman.fastq.gz"
/home/jpodowski/src/bbmap/bbduk.sh  in="${i//_R1_001.fastq.gz}_interleaved_decontam_nohuman.fastq.gz" out="${i//_R1_001.fastq.gz}_interleaved_decontam_nohuman_qtrimmed.fastq.gz"  trimq=30 qtrim=r
/home/jpodowski/src/bbmap/bbnorm.sh in="${i//_R1_001.fastq.gz}_interleaved_decontam_nohuman_qtrimmed.fastq.gz" out=Clean_Reads.fq.gz target=100 mindepth=2

spades.py -m 100 --12 Clean_Reads.fq.gz -t 48 --isolate -o assembly_spades


#Metagenomes


/home/jpodowski/src/bbmap/bbduk.sh  in="${i}" out="${i//.fastq.gz}_decontam.fastq.gz"  ref=/home/jpodowski/src/bbmap/resources/adapters.fa ktrim=r k=23 mink=11 hdist=1 tpe tbo
/home/jpodowski/src/bbmap/removehuman.sh path=/home/jpodowski/databases/humangenomes/ in="${i//.fastq.gz}_decontam.fastq.gz" outu="${i//.fastq.gz}_decontam_nohuman.fastq.gz"
/home/jpodowski/src/bbmap/bbduk.sh  in="${i//.fastq.gz}_decontam_nohuman.fastq.gz" out="${i//.fastq.gz}_decontam_nohuman_qtrimmed.fastq.gz"  trimq=30 qtrim=r
/home/jpodowski/src/bbmap/bbnorm.sh in="${i//.fastq.gz}_decontam_nohuman_qtrimmed.fastq.gz" out=Clean_Reads.fq.gz target=100 mindepth=2



#MG Method 1

megahit --presets meta-sensitive --12 Clean_Reads.fq.gz -t 96 -m 0.6 -o megahit_assembly

metawrap binning -o megahit_assembly_initialbins -t 36 -a megahit_assembly/final.contigs.fa --interleaved --metabat2 --maxbin2 --concoct Clean_Reads.fq.gz

metawrap bin_refinement -o megahit_assembly_initialbins_refined -t 96 -A megahit_assembly_initialbins/metabat2_bins/ -B megahit_assembly_initialbins/maxbin2_bins -C megahit_assembly_initialbins/concoct_bins/ -c 75 -x 5

gtdbtk classify_wf -x fa --cpus 48 --pplacer_cpus 48 --genome_dir megahit_assembly_initialbins_refined/metawrap_75_5 --out_dir megahit_assembly_initialbins_refined/gtdbtk_out

#MG Method 2

megahit --presets meta-sensitive --12 Clean_Reads.fq.gz -t 96 -m 0.6 -o megahit_assembly

# this invokes metagenomic binning through BV-BRC - this can be carried out either by installing bv-brc command line interface (CLI) https://www.bv-brc.org/docs/cli_tutorial/cli_installation.html#cli-installation or through https://www.bv-brc.org/app/MetagenomicBinning which can be accessed through a free user account

p3-submit-metagenome-binning megahit_assembly.fa


#MG Method 3

bowtie2-build GCF_000008445.1_ASM844v1_genomic.fna BanthracisAmes.index

bowtie2 --interleaved Clean_Reads.fq.gz --sensitive --no-unal -p 12 -S Clean_Reads_ag_BanthracisAmes.sam -x BanthracisAmes.index

reformat.sh in=Clean_Reads_ag_BanthracisAmes.sam out=Clean_Reads_ag_BanthracisAmes.fastq.gz pairedonly=t

spades.py -m 500 --12 Clean_Reads_ag_BanthracisAmes.fastq.gz -t 36  -o spades_assembly.fa --isolate

#MG Method 4

bowtie2-build GCF_000008445.1_ASM844v1_genomic.fna BanthracisAmes.index

bowtie2 --interleaved Clean_Reads.fq.gz --sensitive --no-unal -p 12 -S Clean_Reads_ag_BanthracisAmes.sam -x BanthracisAmes.index

reformat.sh in=Clean_Reads_ag_BanthracisAmes.sam  out=Clean_Reads_ag_BanthracisAmes.fastq.gz pairedonly=t

spades.py -m 500 --12 Clean_Reads_ag_BanthracisAmes.fastq.gz -t 36 --trusted-contigs GCF_000008445.1_ASM844v1_genomic.fa -o spades_assembly_trustedcontigs.fa --isolate

# CanSNPer assignment

CanSNPer -i Genome.fasta -r Bacillus_anthracis -b CanSNPerDB.db


